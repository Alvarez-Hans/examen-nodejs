<div class="container p-4">
  <div class="row">
    <div class="col-ms-8  mx-auto">
      <div class="card">
        <div class="card-header">
          <h3>Registre un nuevo Usuario</h3>
        </div>
        <div class="card-body">
          <form action="/usuarios/create" method="POST">
            <div class="form-group">
              <label class=""  for="username">Nombre Usuarios:</label>
              <input type="text" name="username" placeholder="Ingrese Usuario..." class="form-control">
            </div>
            <div class="form-group">
              <label class=""  for="password">Password:</label>
              <input type="password" name="password" placeholder="Ingrese Password..." class="form-control">
            </div>
            <div class="form-group">
              <label class=""  for="email">Correo:</label>
              <input type="email" name="email" placeholder="Ingrese Correo..." class="form-control">
            </div>
            <div class="form-group ">
              <button class="btn btn-success">Guardar</button>
              <a href="/" class="btn btn-danger">Cancelar</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>